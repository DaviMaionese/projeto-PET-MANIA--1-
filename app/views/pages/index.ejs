            { nome: "Juliana", cidade: "São Paulo", estado: "SP", imagem: "../imagens/juliana.jpg", estrelas: "★★★★★" },
            { nome: "Marcelo", cidade: "Barueri", estado: "SP", imagem: "../imagens/marcelo.jpg", estrelas: "★★★★☆" },
            { nome: "Carla", cidade: "Jandira", estado: "SP", imagem: "../imagens/carla.jpg", estrelas: "★★★★★" },
            { nome: "Bruno", cidade: "São Paulo", estado: "SP", imagem: "../imagens/bruno.jpg", estrelas: "★★★★★" },
            { nome: "Fernanda", cidade: "São Paulo", estado: "SP", imagem: "../imagens/fernanda.jpg", estrelas: "★★★★☆" },
            { nome: "Rodrigo", cidade: "Itapevi", estado: "SP", imagem: "../imagens/rodrigo.jpg", estrelas: "★★★★★" }
        ];
    
        const searchForm = document.getElementById("search-form");
        const searchCity = document.getElementById("search-city");
        const searchState = document.getElementById("search-state");
        const searchError = document.getElementById("search-error");
        const adestradorContainer = document.querySelector(".carousel-unique-content");
    
        searchForm.addEventListener("submit", (event) => {
            event.preventDefault();
            const city = searchCity.value.trim().toLowerCase();
            const state = searchState.value.trim().toLowerCase();
    
            // Filtrar adestradores
            const resultados = adestradores.filter(adestrador =>
                adestrador.cidade.toLowerCase() === city && adestrador.estado.toLowerCase() === state
            );
    
            // Limpar resultados anteriores
            adestradorContainer.innerHTML = "";
    
            if (resultados.length > 0) {
                searchError.style.display = "none";
                resultados.forEach(adestrador => {
                    const card = `
                        <div class="carousel-unique-item">
                            <div class="card">
                                <img src="${adestrador.imagem}" alt="${adestrador.nome}">
                                <h3>${adestrador.nome}</h3>
                                <p>${adestrador.cidade} - ${adestrador.estado.toUpperCase()}</p>
                                <div class="stars">${adestrador.estrelas}</div>
                            </div>
                        </div>
                    `;
                    adestradorContainer.innerHTML += card;
                });
            } else {
                searchError.style.display = "block";
            }
        });
    </script>
    
    
